@using WeddingPlanner.Models
@model Wedding

<div class="d-flex justify-content-around mb-4">
<h1>Plan Your Wedding!</h1>
<a href="/dashboard" class="btn btn-lg btn-outline-primary" >Dashboard</a>
<a href="/" class="btn btn-lg btn-outline-danger">Logout</a>
</div>
<div>
    <form asp-controller="Home" asp-action="Submit" method="POST" class="form-group">
        <label asp-for="WedderOne"></label>
        <input asp-for="WedderOne" class="form-control">
        <span asp-validation-for="WedderOne" class="alert-danger"></span>
        <br>
        <label asp-for="WedderTwo"></label>
        <input asp-for="WedderTwo" class="form-control">
        <span asp-validation-for="WedderTwo" class="alert-danger"></span>
        <br>
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control">
        <span asp-validation-for="Date" class="alert-danger"></span>
        <br>
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control">
        <span asp-validation-for="Address" class="alert-danger"></span>
        <br>
        <input type="submit" value=" Create Wedding" class="btn btn-lg btn-outline-success">
    </form>
</div>